{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDir": "./app",
    "outFile": "dist.js"
  },
  "exclude": ["node_modules", "dependencies", "css", "test", "dist"]
}
