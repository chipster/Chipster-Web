{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "chipster-web": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"

        },
        "@schematics/angular:application": {
          "strict": true
        }
      },

      "root": "",
      "sourceRoot": "src",

      "prefix": "ch",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": ["src/assets"],
            "styles": [
              "src/styles.scss",
              "src/bootstrap-custom.scss",
              "node_modules/@fortawesome/fontawesome-free/css/all.min.css",
              "src/assets/lib/handsontable/handsontable.full.css",
              "node_modules/d3-context-menu/css/d3-context-menu.css",
              "node_modules/@ng-select/ng-select/themes/default.theme.css",
              "node_modules/ag-grid-community/dist/styles/ag-grid.css",
              "node_modules/ag-grid-community/dist/styles/ag-theme-alpine.css"
            ],
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js",
              "node_modules/popper.js/dist/umd/popper.min.js",
              "node_modules/bootstrap/dist/js/bootstrap.min.js",
              "node_modules/@flowjs/flow.js/dist/flow.js",
              "src/assets/lib/handsontable/handsontable.full.js",
              "node_modules/yamljs/dist/yaml.min.js",
              "node_modules/d3-context-menu/js/d3-context-menu.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]

            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "chipster-web:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "chipster-web:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "chipster-web:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js",
              "node_modules/popper.js/dist/umd/popper.min.js",
              "node_modules/bootstrap/dist/js/bootstrap.min.js",
              "node_modules/@flowjs/flow.js/dist/flow.js",
              "src/assets/lib/handsontable/handsontable.full.js",
              "node_modules/yamljs/dist/yaml.min.js",
              "node_modules/d3-context-menu/js/d3-context-menu.js"
            ],
            "styles": [
              "src/styles.less",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/font-awesome/css/font-awesome.min.css",
              "src/assets/lib/handsontable/handsontable.full.css"
            ],
            "assets": ["src/assets"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "chipster-web:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "chipster-web:serve:production"
            }
          }
        }
      }
    }
},
  "defaultProject": "chipster-web",
    "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }

}
